{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe compile project",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/lib/*.c",
                "/Fe${workspaceFolder}/src/main.exe",
                "${workspaceFolder}/src/main.c",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build entire C project, output main executable."
        }
    ],
    "version": "2.0.0"
}